    <% end %>
  </div>
  <div class="col-sm-4">
    <%= link_to edit_feature_path(id: 3, video_id: @video.id) do %>
      <%= image_tag "video-3.png", class: "img-fluid" %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <%= link_to edit_feature_path(id: 4, video_id: @video.id) do %>
