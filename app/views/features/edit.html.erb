<div class='row'>
  <div class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3'>
    <h1>Edit Featured Video</h1>
    <%= form_with(model: @feature, local: true) do |form| %>
      <h3>Video</h3>
      <div class="form-group">
        <div class="video-container">
          <iframe src="//youtube.com/embed/<%= @video.url.split("=").last %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>
      </div>

      <%= form.hidden_field :target_id, value: params[:video_id] %>

      <div class="form-group">
        <%= form.label :name, "Feature Slot" %>
        <%= form.text_field :name, disabled: true, class: "form-control input-lg" %>
      </div>

      <div class="form-group">
        <%= form.label :caption, "Why is this video being featured? (optional)" %>
        <%= form.text_area :caption, maxlength: 190, rows: 4, class: "form-control input-lg" %>
      </div>

      <div class="actions">
        <%= form.submit "Save", class: "btn btn-lg btn-primary btn-block"  %>
      </div>
    <% end %>
  </div>
</div>