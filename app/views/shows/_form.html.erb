<%= form_with(model: show, local: true) do |form| %>
  <% if show.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(show.errors.count, "error") %> prohibited this show from being saved:</p>

      <ul>
      <% show.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :venue_id %>
    <%= form.select :venue_id, options_from_collection_for_select(Venue.all.order(:name), "id", "name", @show.venue&.id), { include_blank: "Select a Venue" }, id: :show_venue_id, class: "form-control form-control-lg" %>
  </div>

  <div class="mb-4">
    <%= form.label :date %><br>
    <%= form.date_select :date, { order: [:day, :month, :year], start_year: 10.years.ago.year, end_year: Time.now.year }, { class: "form-control form-control-lg", style: "width: auto; display: inline" } %>
  </div>

  <% if current_user.admin? %>
    <div class="mb-4">
      <%= form.label :status %>
      <%=
        form.select :status, Show.statuses.keys.map { |w| [w.humanize, w] }, {},
        class: "form-control form-control-lg"
      %>
      <p class="form-text">This is an admin-only field. If you can see this, you are an admin.</p>
    </div>
  <% end %>

  <div class="mb-4">
    <%= label_tag "Bands" %>
    <ul class="list-unstyled">
      <% Band.all.order(:name).each do |band| %>
        <li class="fs-6">
          <%= check_box_tag "show[band_ids][]", band.id, @show.bands.include?(band), id: band.name.parameterize %>
          <%= label_tag band.name.parameterize, band.name %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="mb-4">
    <%= form.label :name, "Name (optional)" %>
    <%= form.text_field :name, id: :show_name, class: "form-control form-control-lg" %>
    <p class="form-text">
      The show name is usually only included for festivals and such as, like <em>Ceremony of Sludge 2017 First Night</em>. If this is left blank, the show will be named "<em>Band1, Band2... at Venue</em>".
    </p>
  </div>

  <div class="mb-4">
    <%= form.label :notes, "Notes (optional)" %>
    <%= form.text_area :notes, id: :show_notes, class: "form-control form-control-lg" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Save", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
