<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <h1>Login</h1>
    <%= form_with url: auth_path, local: true, method: :post do |form| %>
      <div class="form-group">
        <%= form.label :username %>
        <%= form.text_field :username, class: "form-control input-lg" %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control input-lg" %>
      </div>

      <div class="form-group">
        <%= form.check_box :remember_me %>
        <%= form.label :remember_me %>
      </div>

      <div class="actions">
        <%= form.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
